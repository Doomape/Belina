@{
    ViewBag.Title = "ProductInfo";
}
<style>
    #main-content {
        width: 1024px;
        margin: auto;
        min-height: 500px;
         margin-top: 50px;
    }
        .product-on-top-promotion {
        min-height: 400px;
        width: 1024px;
        background: #e5e5e5;
        margin-bottom: 10px;
        margin-left: 10px;
        overflow: hidden;
    }

    .product-on-top-image {
        float: left;
        width: 310px;
        height: 280px;
    }

    .product-on-top-description {
        float: left;
        width: 680px;
    }

    .product-on-top-image-holder {
        width: 250px;
        height: 220px;
        margin-top: 30px;
        margin-left: 30px;
        text-align: center;
        background: white;
        border: 3px solid #ebebeb;
        border-radius: 13px;
        line-height: 220px;
    }

        .product-on-top-image-holder img {
            width: 200px;
            height: 200px;
            vertical-align: middle;
        }
    .product-on-top-title {
        margin-top: 15px;
    }
     .product-on-top-title h2{
         font-family: 'Myriad Pro';
        text-align: center;
    }

    .product-on-top-title pre{
        margin-top: 40px;
        font-family: Arial;
        font-size: 14px;
        color: #565656;
        border-top: 1px solid #c8c8c8;
        padding-top: 15px;
        border-bottom: 1px solid #c8c8c8;
        padding-bottom: 20px;
        margin-bottom: 25px;
    }
</style>

@{

    var product = (List<Belina.Models.Products>)ViewBag.Product;
}

@foreach (var p in product)
{
    <div class="product-on-top-promotion">
        <div class="product-on-top-image">
            <div class="product-on-top-image-holder">
                <img src="@p.product_image" />
            </div>
        </div>
        <div class="product-on-top-description">
            <div class="product-on-top-title">
                <h2>@p.product_name</h2>
                <pre>@p.product_description</pre>
            </div>
        </div>
    </div>
}

