@{
    Layout = "~/Views/Shared/SiteMaster.cshtml";
}
<style>
    #main-content {
        width:1024px;
        margin:auto;
        min-height:500px;
        margin-top:30px;
    }
    .contact_form {
        float:left;
        width:400px;
    }
    #map_container {
        float:left;
    }
</style>
<script src="http://maps.google.com/maps/api/js?sensor=false" type="text/javascript"></script>
<div class="contact_form">
    <ul>
        <li>
            <h3>Contact Us</h3>
        </li>
        <li>
            <label for="name">Name or Company:</label>
            <input id="ime" type="text" class="contact_input" placeholder="John Doe" required />
        </li>

        <li>
            <label for="email">Email:</label>
            <input id="email" type="email" class="contact_input" name="email" placeholder="john_doe@example.com" required />
        </li>
        <li>
            <label for="number">Number:</label>
            <input id="broj" type="text" class="contact_input" name="website" placeholder="number" />

        </li>
        <li>
            <label for="message">Message:</label>
            <textarea id="poraka" class="contact_input" name="message" cols="40" rows="6" required></textarea>
        </li>
        <li>
            <button class="submit" type="button">Send</button>
        </li>
    </ul>

</div>
    <div id="map_container" style="width: 400px;overflow:hidden;height:300px;">
        <div id="map" style="width: 400px;height:300px;overflow: hidden;">
        </div>
    </div>
<script type="text/javascript">
    InitializeMap();
    $('.submit').click(function () {



        var name = $('#ime').val();
        var email = $('#email').val();
        var number = $('#broj').val();
        var message = $('#poraka').val();
        var required_inputs = new Array();


        for (var i = 0; i < $(".contact_input").length; i++) {
            if ($($(".contact_input")[i]).attr('required')) {
                required_inputs.push($($(".contact_input")[i]));
            }

        }
        var pom = false;

        for (var j = 0; j < required_inputs.length; j++) {
            if (required_inputs[j].val() == "")
                pom = true;
        }
        if (pom == false) {
            $.ajax({
                url: "/Home/Sendform",
                type: "GET",
                data: {

                    ime: name,
                    broj: number,
                    email: email,
                    poraka: message,
                },
                success: function (result) {
                    alert(result.msg);
                  
                }
            });
        } else {
            alert("Enter the required values");
        }


    });


    function InitializeMap() {

        directionsDisplay = new google.maps.DirectionsRenderer();

        var latlng = new google.maps.LatLng(41.935803, 21.525655);

        var myOptions = {
            zoom: 15,
            center: latlng,
            mapTypeId: google.maps.MapTypeId.ROADMAP,
            navigationControl: true

        };
        map = new google.maps.Map(document.getElementById("map"), myOptions);
        google.maps.event.trigger(map, 'resize');

        marker = new google.maps.Marker
        (
            {

                position: new google.maps.LatLng(41.935595, 21.525618),
                map: map,
                title: 'Click me'

            }
        );

        var infowindow = new google.maps.InfoWindow({
            content: 'Location info: St. Ratko Mitrovic bb 1000 Skopje, Macedonia - '

        });

        google.maps.event.addListener(marker, 'click', function () {
            // Calling the open method of the infoWindow 
            infowindow.open(map, marker);
        });

        directionsDisplay.setMap(map);
        //directionsDisplay.setPanel(document.getElementById("directionsPanel"));

    }
</script>
